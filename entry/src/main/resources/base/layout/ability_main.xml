<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="#000"
    ohos:alignment="center"
    ohos:orientation="vertical">

    <Text
        ohos:padding="8vp"
        ohos:id="$+id:networkLabel"
        ohos:height="match_content"
        ohos:width="150vp"
        ohos:text_color="#e9a811"
        ohos:background_element="#000"
        ohos:layout_alignment="horizontal_center"
        ohos:text="Network: "
        ohos:text_size="12vp"
        />

    <Text
        ohos:padding="8vp"
        ohos:id="$+id:timeToDownload"
        ohos:height="match_content"
        ohos:text_color="#e9a811"
        ohos:width="150vp"
        ohos:background_element="#000"
        ohos:layout_alignment="horizontal_center"
        ohos:text="Download Time: "
        ohos:text_size="12vp"
        />

    <Text
        ohos:padding="8vp"
        ohos:id="$+id:downloadSize"
        ohos:height="match_content"
        ohos:width="150vp"
        ohos:background_element="#000"
        ohos:text_color="#e9a811"
        ohos:layout_alignment="horizontal_center"
        ohos:text="Size: "
        ohos:text_size="12vp"
        />

    <Button
        ohos:background_element="#fff"
        ohos:id="$+id:retryButton"
        ohos:text="Restart"
        ohos:margin="8vp"
        ohos:height="20vp"
        ohos:width="100vp"/>
    <Button
        ohos:margin="8vp"
        ohos:id="$+id:quitButton"
        ohos:text="Force Stop"
        ohos:background_element="#fff"
        ohos:height="20vp"
        ohos:width="100vp"/>
</DirectionalLayout>